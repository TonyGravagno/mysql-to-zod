---
import "github-markdown-css/github-markdown.css";
const { frontmatter } = Astro.props;
---

<html>
  <head>
    <title>{frontmatter.title}</title>
    <style>
      .markdown-body {
        box-sizing: border-box;
        min-width: 200px;
        max-width: 980px;
        min-height: 100dvh;
        padding: 45px;
        padding-top: 16px;
        width: 100%;
      }

      @media (max-width: 767px) {
        .markdown-body {
          padding: 15px;
        }
      }
    </style>
  </head>
  <body>
        <div class="markdown-body">
          <slot />
        </div>
  </body>
</html>
